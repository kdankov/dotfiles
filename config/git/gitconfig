[color]
	ui = auto
[apply]
	whitespace = nowarn
[alias]
	co = checkout
	br = branch

[core]
	editor = nvim
	autocrlf = input
	excludesfile = ~/.gitignore

[github]
	user = kdankov

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[push]
	default = simple
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[init]
	defaultBranch = main
